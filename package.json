{
  "name": "cantonment-board-web",
  "version": "1.0.0",
  "description": "Web application for Cantonment Board Administration System",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd backend && npm run dev",
    "client": "cd frontend && npm start",
    "install-all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "build": "npm install && cd backend && npm install",
    "migrate": "node migrate-to-postgresql.js",
    "test": "echo \"No tests configured\" && exit 0"
  },
  "keywords": [
    "cantonment",
    "administration",
    "web-app"
  ],
  "author": "CBA System",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "sqlite3": "^5.1.7",
    "pg": "^8.11.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
